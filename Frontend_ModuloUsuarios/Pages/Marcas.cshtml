@page
@model Frontend_ModuloUsuarios.Pages.MarcasModel
@{
    ViewData["Title"] = "Realizar Marca";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Siempre Puntuales S.A. - Reloj Marcador</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/3176/3176366.png">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f7fb;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0,0,0,0.1);
        }

        .left-panel {
            background: #f0f4ff;
            border-radius: 15px 0 0 15px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .left-panel h2 {
                font-weight: bold;
                color: #0d6efd;
            }
    </style>
</head>
<body>
    <!-- Barra superior con logo -->
    <nav class="navbar navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="https://cdn-icons-png.flaticon.com/512/3176/3176366.png" alt="Logo" width="40" class="me-2">
                <span class="fw-bold text-primary">Siempre Puntuales S.A.</span>
            </a>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-8">
                <!-- flex-column en móvil, flex-md-row en escritorio -->
                <div class="card d-flex flex-column flex-md-row">

                    <!-- Panel izquierdo -->
                    <div class="left-panel col-md-5">
                        <img src="~/img/logo.jpg" alt="Logo Siempre Puntuales" width="100" class="mb-3">
                        <p>Control de asistencia<br>Marque su ingreso o salida</p>
                    </div>

                    <!-- Formulario derecho -->
                    <div class="col-md-7 p-4">
                        <h4 class="mb-4">Realizar Marca</h4>

                        <!-- Mensajes -->
                        <div id="alertaError" class="alert alert-danger d-none" aria-live="polite"></div>
                        <div id="alertaOk" class="alert alert-success d-none" aria-live="polite"></div>

                        <form id="formMarca">
                            <div class="mb-3">
                                <label for="usuario" class="form-label">Usuario</label>
                                <input type="text" class="form-control" id="usuario" placeholder="Ingrese su identificación" required>
                            </div>
                            <div class="mb-3">
                                <label for="clave" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" id="clave" placeholder="Ingrese su contraseña" required>
                            </div>
                            <div class="mb-3">
                                <label for="area" class="form-label">Área</label>
                                <select class="form-select" id="area" required>
                                    <option value="">Seleccione su área</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="detalle" class="form-label">Detalle (opcional)</label>
                                <textarea class="form-control" id="detalle" rows="2" maxlength="100"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Tipo de Marca</label><br>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="tipo" id="entrada" value="Entrada" checked>
                                    <label class="form-check-label" for="entrada">Entrada</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="tipo" id="salida" value="Salida">
                                    <label class="form-check-label" for="salida">Salida</label>
                                </div>
                            </div>

                            <!-- Botón con spinner -->
                            <button type="submit" id="btnRegistrar" class="btn btn-primary w-100">
                                <span id="btnText">Registrar Marca</span>
                                <span id="btnSpinner" class="spinner-border spinner-border-sm d-none"></span>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        const inputUsuario = document.getElementById("usuario");
        const inputClave = document.getElementById("clave");
        const selectArea = document.getElementById("area");
        const alertaError = document.getElementById("alertaError");
        const alertaOk = document.getElementById("alertaOk");

        async function validarYObtenerAreas() {
            const identificacion = inputUsuario.value.trim();
            const contrasena = inputClave.value.trim();

            // Evitar llamadas si los campos están vacíos
            if (!identificacion || !contrasena) return;

            try {
                // 1. Validar funcionario
                let resp = await fetch("http://localhost:5186/api/marcas/validar-funcionario", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ identificacion, contrasena })
                });
                let data = await resp.json();

                if (!data.success) {
                    alertaError.classList.remove("d-none");
                    alertaError.innerText = data.message || "Credenciales inválidas";
                    alertaOk.classList.add("d-none");
                    selectArea.innerHTML = '<option value="">Seleccione su área</option>';
                    return;
                }

                alertaError.classList.add("d-none");
                alertaOk.classList.remove("d-none");
                alertaOk.innerText = "Credenciales válidas";

                // 2. Obtener áreas del funcionario
                resp = await fetch(`http://localhost:5186/api/marcas/funcionario/${identificacion}/areas`);
                let areas = await resp.json();

                // 3. Llenar el select de áreas
                selectArea.innerHTML = '<option value="">Seleccione su área</option>';
                areas.forEach(area => {
                    const option = document.createElement("option");
                    option.value = area.id_Area;
                    option.textContent = area.nombre_Area;
                    selectArea.appendChild(option);
                });
            } catch (err) {
                alertaError.classList.remove("d-none");
                alertaError.innerText = "Error de conexión con la API";
                alertaOk.classList.add("d-none");
                selectArea.innerHTML = '<option value="">Seleccione su área</option>';
            }
        }

        // Detectar cambios en identificación o contraseña
        inputUsuario.addEventListener("blur", validarYObtenerAreas);
        inputClave.addEventListener("blur", validarYObtenerAreas);
    </script>

</body>
</html>
